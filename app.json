{
  "expo": {
    "name": "Poly",
    "slug": "Poly",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000"
    },
    "version": "0.0.3",
    "android": {
      "package": "com.poly.poly",
      "versionCode": 3,
      "useNextNotificationsApi": true,
      "googleServicesFile": "./google-services.json",
      "permissions": ["CAMERA", "CAMERA_ROLL", "ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    },
    "ios": {
      "bundleIdentifier": "com.poly.poly",
      "buildNumber": "0.0.3",
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera when the user wants to upload photos to his/her profile."
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "turboModules": true
    }
  }
}
